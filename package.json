  "main": "src/index.mjs",
  "type": "module",
  "scripts": {
    "start": "node --max-old-space-size=3072 --optimize-for-size --gc-interval=100 --max-semi-space-size=128 src/index.mjs",
    "start:prod": "node --max-old-space-size=3072 --optimize-for-size --gc-interval=100 --max-semi-space-size=128 src/index.mjs",
    "start:debug": "node --max-old-space-size=3072 --inspect --gc-interval=100 --max-semi-space-size=128 src/index.mjs",
    "dev": "nodemon --max-old-space-size=3072 --gc-interval=100 --max-semi-space-size=128 src/index.mjs",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix"
